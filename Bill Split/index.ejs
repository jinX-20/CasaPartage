<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Expense Splitting</title>
    <script>
        function showSplit() {
            // Conversion rate from USD to INR (1 USD = 83 INR)
            const conversionRate = 83;

            // Product data - you could dynamically render this data as well
            const products = [
                { name: 'Apple', price: 50, quantity: 1 },
                { name: 'Bread', price: 20, quantity: 2 }
            ];

            // Calculate Total Amount in USD
            const totalAmount = products.reduce((sum, item) => sum + (item.price * item.quantity), 0);

            // Convert the total amount to INR
            const totalAmountInINR = totalAmount * conversionRate;

            // Calculate Amount Each Person Pays (split between 4 people) in INR
            const splitAmountInINR = totalAmountInINR / 4;

            // Display the results in INR
            document.getElementById('totalAmount').innerText = `Total Amount: ₹${totalAmountInINR.toFixed(2)}`;
            document.getElementById('splitAmount').innerText = `Amount per person: ₹${splitAmountInINR.toFixed(2)}`;
        }
    </script>
</head>
<body>
    <h1>Expenses Splitting</h1>

    <h3>Apple</h3>
    <p>Price: $50.00</p>
    <p>Quantity: 1</p>

    <h3>Bread</h3>
    <p>Price: $20.00</p>
    <p>Quantity: 2</p>

    <!-- Button to show split amounts -->
    <button onclick="showSplit()">Show Split</button>

    <hr>

    <!-- Divs to display the results -->
    <p id="totalAmount"></p>
    <p id="splitAmount"></p>

    <form action="/checkout" method="post">
        <input type="submit" value="Proceed to Checkout">
    </form>
</body>
</html>
